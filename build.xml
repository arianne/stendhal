			</classpath>
		</taskdef>
<!--
7   1  1
6   2  0.5
5   4  0.25
4   8  0.125
3  16  0.0625
2  32  0.03125
1  64  0.015625
0 128  0.0078125
-->

		<mkdir dir="tiled/world" />
		<maprenderer imagePath="${tiled}/world/" zoom="0.0625">
			<fileset dir="tiled">
				<include name="Level 0/**/*.tmx"/>
				<exclude name="**/memory/**" />

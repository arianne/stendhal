<?xml version="1.0" encoding="ISO-8859-1"?>
<creatures xmlns="stendhal" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="stendhal ../creatures.xsd ">
    
  <creature name="leprechaun">
    <type class="fairy" subclass="leprechaun" tileid="fairy.png:2"/>
    <description>You see a leprechaun, you would be lucky if you found his treasure.</description>
    <attributes>
      <atk value="126"/>
      <def value="20"/>
      <hp value="95"/>
      <speed value="0.6"/>
      <size value="1,1"/>
    </attributes>
    <level value="9"/>
    <experience value="90"/>
    <respawn value="1200"/>
    <corpse name="tiny_humanoid" harmless="leprechaun_green" />
    <drops>
      <item value="money" quantity="[30,100]" probability="30.0"/>
      <item value="sandwich" quantity="[1,1]" probability="2.0"/>
      <item value="lucky charm" quantity="[1,1]" probability="1.0"/>
    </drops>
    <equips>
    </equips>
    <ai>
      <says>
        <noise state="idle follow fight" value="They're always after my Lucky Charms!!"/>
        <noise state="idle follow fight" value="Clovers and rainbows... stars and horseshoes..."/>
      </says>
      <profile name="brave"/>
      <profile name="offensive"/>
      <profile name="human"/>
      <profile name="patrolling"/>
    </ai>
  </creature>
  
  <creature name="littlefairy">
    <type class="fairy" subclass="littlefairy" tileid="fairy.png:3"/>
    <description>You see a little fairy, which is magical and nice.</description>
    <attributes>
      <atk value="143"/>
      <def value="26"/>
      <hp value="81"/>
      <speed value="0.5"/>
      <size value="1,1"/>
    </attributes>
    <level value="11"/>
    <experience value="120"/>
    <respawn value="1210"/>
    <corpse name="tiny_humanoid"/>
    <drops>
      <item value="money" quantity="[3,7]" probability="90.0"/>
      <item value="fairy cake" quantity="[1,2]" probability="20.0"/>
    </drops>
    <equips>
    </equips>
    <ai>
      <profile name="offensive"/>
      <profile name="human"/>
      <profile name="patrolling"/>
    </ai>
  </creature>
 
  <creature name="clurichaun">
    <type class="fairy" subclass="clurichaun" tileid="fairy.png:1"/>
    <description>You see a clurichaun. He is rich, but you don't know if you are able to find his gold!</description>
    <attributes>
      <atk value="152"/>
      <def value="27"/>
      <hp value="95"/>
      <speed value="0.4"/>
      <size value="1,1"/>
    </attributes>
    <level value="12"/>
    <experience value="130"/>
    <respawn value="1210"/>
    <corpse name="tiny_humanoid" harmless="leprechaun_purple" />
    <drops>
      <item value="money" quantity="[30,100]" probability="50.0"/>
      <item value="beer" quantity="[2,5]" probability="10.0"/>
      <item value="wine" quantity="[1,5]" probability="10.0"/>
      <item value="lucky charm" quantity="[1,1]" probability="1.0"/>
    </drops>
    <equips>
    </equips>
    <ai>
      <says>
        <noise state="idle follow fight" value="Join me for a drink, lassie?"/>
        <noise state="idle follow fight" value="Floating blue balloons..."/>
      </says>
      <profile name="brave"/>
      <profile name="offensive"/>
      <profile name="human"/>
      <profile name="patrolling"/>
    </ai>
  </creature> 
  
  <creature name="baby angel">
    <type class="fairy" subclass="baby_angel" tileid="fairy.png:0"/>
    <description>You see a baby angel. Will it ever get a chance to grow up?</description>
    <attributes>
      <atk value="628"/>
      <def value="100"/>
      <hp value="700"/>
      <speed value="0.9"/>
      <size value="1,1"/>
    </attributes>
    <level value="90"/>
    <experience value="8190"/>
    <respawn value="3530"/>
    <corpse name="humanoid"/>
    <drops>
      <item value="money" quantity="[30,60]" probability="100.0"/>
      <item value="fairy cake" quantity="[1,5]" probability="10.0"/>
      <item value="empty scroll" quantity="[1,2]" probability="5.0"/>
      <item value="golden cloak" quantity="[1,1]" probability="2.0"/>
      <item value="liberty helmet" quantity="[1,1]" probability="0.1"/>
      <item value="balloon" quantity="[1,1]" probability="5.0"/>
    </drops>
    <equips>
    </equips>
    <abilities>
      <damage type="light"/>
      <susceptibility type="dark" value="1.3"/>
      <susceptibility type="light" value="0.7"/>
    </abilities>
    <ai>
      <says>
        <noise state="idle follow fight" value="I want to grow to be mighty!"/>
	<sound value="sneeze-baby-1"/>
      </says>
      <profile name="brave"/>
      <profile name="offensive"/>
      <profile name="human"/>
      <profile name="heal" params="5,50"/>
      <profile name="patrolling"/>
    </ai>
  </creature>
   
</creatures>  

      <implementation
        class-name="games.stendhal.server.entity.mapstuff.chest.PersonalChest">
        <parameter name="slot">bank_nalwor</parameter>
      </implementation>
    </entity>
    <entity x="21" y="2">
      <implementation
        class-name="games.stendhal.server.entity.mapstuff.chest.PersonalChest">
        <parameter name="slot">bank</parameter>
      </implementation>
    </entity>
    <entity x="22" y="2">
      <implementation
        class-name="games.stendhal.server.entity.mapstuff.chest.PersonalChest">

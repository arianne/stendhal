    </entity>
    <entity x="56" y="56">
      <implementation
        class-name="games.stendhal.server.entity.mapstuff.sound.LoopedAmbientSoundSource">
        <parameter name="sound">wind-2</parameter>
        <parameter name="volume">40</parameter>
        <parameter name="radius">4</parameter>
      </implementation>
